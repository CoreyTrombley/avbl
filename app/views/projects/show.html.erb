<p id="notice"><%= notice %></p>

<p>
  <h2><%= @project.name %></h2>
  <div>
    <p><b>Tags:</b>
    <% @project.tag_list.each do |tag| %>
      <span class="tiny label"><%= tag %></span>
    <%end%>
    </p>
  </div>
  <div>
    <b>Description:</b>
    <p><%= @project.description %></p>
  </div>
</p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div class="comment_box">
    <p><%= comment.user.first_name %> <%= comment.user.last_name %>  commented:</p>
    <p><em><%= comment.comment %></em></p>
      <p><i>at <%= comment.created_at.strftime("%H:%M") %> on  <%= comment.created_at.strftime("%d %b. %Y") %></i></p> 
  </div>
<% end %>

<h5>Comment:</h5>
<%= form_for([@project, @project.comments.build]) do |f| %>
  <%= f.text_field :comment %>
  <%= f.submit :class => 'button' %>
<% end %>


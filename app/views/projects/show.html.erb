<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @project.name %>
  <b>Tags:</b>
  <%= @project.tag_list %>
</p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

<h3>Comments</h3>
<% @comments.each do |comment| %>
  <p><%= comment.user.first_name %> <%= comment.user.last_name %>  commented:</p>
  <p><em><%= comment.comment %></em></p>
    <p><i>at <%= comment.created_at.strftime("%H:%M") %> on  <%= comment.created_at.strftime("%d %b. %Y") %></i></p> 
<% end %>

<h5>Add a comment:</h5>
<%= form_for([@project, @project.comments.build]) do |f| %>
  <%= f.text_field :comment %>
  <%= f.submit %>
<% end %>


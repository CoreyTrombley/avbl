%div.large-12.columns
  %h2 User Profile
  %ul
    - if @user.avatar.url.present?
      %li= image_tag @user.avatar.thumb
    %li= @user.first_name
    - if @user.last_name.present?
      %li= @user.last_name
    - else
      %li None provided
    %li= @user.email
    %li= @user.date_of_birth
    %li= @user.gender
  %h5 Projects
  %ul 
    - @user.projects.each do |p|
      %li= link_to p.name, project_path(p)

- if @user == current_user
  %h2 Users Who Follow You
  %ul
    - for user in @user.inverse_friends
      %li.button.tiny
        = link_to (image_tag user.avatar.thumb), user_path(user)
        = user.first_name + " " + user.last_name
  %h2 People You Follow
  %ul
    - for user in @user.friends
      %li.button.tiny
        = link_to (image_tag user.avatar.thumb), user_path(user)
        = user.first_name + " " + user.last_name